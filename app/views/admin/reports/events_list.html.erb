<div class="events_list">
  <div class="title">
    <h3>活动列表</h3>
  </div>
  <div class="navpath">
    <span>
      <%= link_to "首页", admin_reports_path %>
    </span>
    <span class="slash">/</span>
    <span class="subpath">
      活动列表
    </span>
  </div>

  <div class="content">
    <table>
      <tr class="title">
        <th>活动名称</th>
        <th>开始时间</th>
        <th>结束时间</th>
        <th>报名人数</th>
        <th>支付人数</th>
        <th>发起人</th>
        <th>价格</th>
        <th>操作</th>
      </tr>
      <% @events.each_with_index do |event| %>
      <tr class="body" id="event-<%= event.id %>">
        <td><%= event.title[0..10] %></td>
        <td><%= event.start_time %></td>
        <td><%= event.end_time %></td>
        <td><%= link_to Participant.where(event_id: event.id).count, admin_participants_list_path(event_id: event.id) %></td>
        <td><%= Participant.where(event_id: event.id, status_pay: 1).count %></td>
        <td><%= event.name %></td>
        <td><%= event.price %></td>
        <td><%= link_to "删除", event_path(event), method: :delete, remote: true,  data: { confirm:'确定删除?' } %></td>
      </tr>
      <% end %>
    </table>
    <div class="paginate">
      <%= will_paginate @events %>
    </div>
  </div>
</div>