<div class="title">
  <h3>系统报告</h3>
</div>

<div class="content">
  <table>
    <tr class="title">
      <th>用户id</th>
      <th>用户昵称</th>
      <th>用户名字</th>
      <th>参与活动</th>
      <th>参与话题</th>
    </tr>
    <% @user.each_with_index do |user| %>
    <tr class="body">
      <td><%= user.id %></td>
      <td><%= user.username %></td>
      <td><%= user.name %></td>
      <td><%= user.events.count.to_i %></td>
      <td><%= user.topics.count.to_i %></td>
    </tr>
    <% end %>
  </table>
</div>