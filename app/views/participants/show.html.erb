<div class="participant-show">

  <div class="seller-state">
    <div class="state-cont">
      <p class="apply-success">
        <%= t(:apply_success) %>
      </p>
    </div>
  </div>

  <div class="consignee">
    <div class="name-mobile">
      <span class="title"><%= t(:consignee) %>:</span>
      <span class="name"><%= @participant.name %></span>
      <span class="mobile"><%= @participant.mobile %></span>
    </div>
    <div class="address">
      <span class="address-title"><%= t(:address) %>:</span>
      <span class="address-detail"><%= @participant.address %></span>
    </div>
  </div>

  <div class="participant-information">
    <div class="info-title">
      <%= @participant.groupbuy_id.present? ? t(:groupbuy_detail) : t(:event_detail) %>
      <i class="fa fa-chevron-right"></i>
    </div>
    <div class="info-detail">
      <div class="row">
        <div class="columns small-3"><%= image_tag @parent.pic_url %></div>
        <div class="columns small-9"><%= @parent.title %></div>
      </div>
      <div class="row">
        <div class="columns small-3"><%= t(:amount) %></div>
        <div class="columns small-2 small-offset-7 amount-detail">x<%= @participant.quantity.to_i %></div>
      </div>
    </div>
    <div class="clear"></div>
  </div>


  <div class="price-relative">
    <div class="row">
      <div class="columns small-3">
      <%= t(:area) %>
      </div>
      <div class="columns small-6 small-offset-3 price-detail">
        <%= @participant.area.to_s %>
      </div>
      <div class="columns small-3">
        <%= t(:market_price) %>
      </div>
      <div class="columns small-3 small-offset-6 price-detail">
        <i class="fa fa-jpy"></i><%= @parent.market_price.to_f %>
      </div>
      <div class="columns small-3">
        <%= t(:price) %>
      </div>
      <div class="columns small-3 small-offset-6 price-detail">
        <i class="fa fa-jpy"></i><%= @parent.price %>
      </div>
      <div class="columns small-3">
        <%= t(:discount) %>
      </div>
      <div class="columns small-3 small-offset-6 price-detail">
        <i class="fa fa-jpy"></i><%= @participant.discount.to_f %>
      </div>
      <div class="columns small-3">
        <%= t(:freightage) %>
      </div>
      <div class="columns small-3 small-offset-6 price-detail">
        <i class="fa fa-jpy"></i><%= @participant.freightage.to_f %>
      </div>

      <hr />
      <div class="columns small-3">
        <%= t(:total_price) %>
      </div>
      <div class="columns small-3 small-offset-6 total-price">
        <i class="fa fa-jpy"></i><%= @participant.amount.to_f - @participant.discount.to_f + @participant.freightage.to_f %>
      </div>
    </div>
    <div class="clear"></div>

    <div class="pay-button">
      <div class="columns small-4 small-offset-2">
        <%= link_to wechat_pay_participant_path(@participant) do %>
        <div class="button tiny"><%= t(:pay) %></div>
        <% end %>
      </div>
      <div class="columns small-4 end">
        <%= link_to @path do %>
        <div class="button tiny"><%= t(:contact_master) %></div>
        <% end %>
      </div>
      <div class="clear"></div>
    </div>
  </div>
</div>
