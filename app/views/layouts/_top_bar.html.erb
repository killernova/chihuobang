<div class="sticky">
  <nav class="top-bar" data-topbar role="navigation" data-topbar data-options="sticky_on: small">
    <ul class="title-area">
      <!-- Title Area -->
      <li class="name middle">
        <h1 class="title" style="color:white"><%= content_for?(:title) ? yield(:title) : t(:site_name) %></h1>      
      </li>
      <li class="toggle-topbar"><a href="#"><span><i class="fa fa-plus"></i></span></a></li>
    </ul>

    <section class="top-bar-section">

      <!-- Right Nav Section -->
      <ul class="right">
        <li>      
          <%if session[:locale] == 'en'%>  
             <%=link_to '<i class="fa fa-language"></i>'.html_safe+' 中文',"#{request.url.sub('?locale=en','')}?locale=zh"%>
          <%else%>
            <%=link_to '<i class="fa fa-language"></i>'.html_safe+' English',"#{request.url.sub('?locale=zh','')}?locale=en"%>
          <%end%> 
        </li>
        <li><%=link_to ' <i class="fa fa-search"></i>'.html_safe+' '+t(:search),search_path%></li>
        <%if signed_in?%>
          <li><%=link_to '<i class="fa fa-cart-plus"></i>'.html_safe+' '+t(:new_groupbuy), new_groupbuy_path%></li>
          <li><%=link_to '<i class="fa fa-calendar"></i>'.html_safe+' '+t(:new_event), new_event_path%></li>
          <li><%=link_to '<i class="fa fa-bullhorn"></i>'.html_safe+' '+t(:new_topic), new_forum_topic_path(forum_id)%></li>
        <%else%>
          <li><%=link_to '<i class="fa  fa-sign-in"></i>'.html_safe+' '+t(:login), login_path%></li>
        <%end%>
          <li class="divider hide-for-small"></li>
        <%@plus_menu.each do |link|%>
          <li><%=link_to link[:name], link[:path]%></li>
        <%end if @plus_menu%>
      </ul>
    </section>
  </nav>
</div>