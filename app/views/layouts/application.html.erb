  </div> -->
 <%=render '/layouts/menu'%>

  <!-- close the off-canvas menu -->
  <a class="exit-off-canvas"></a>

  </div>
</div>
   

   
    <%#= javascript_include_tag "application" 'data-turbolinks-track' => true %>
     <%= javascript_include_tag "application"%>
    <%= javascript_include_tag controller_name%>
     
  </body>
</html>
