<div class="topic columns">
  <div class="small-10 columns">
    <h5><%= link_to topic.title, topic %></h5>
    <p><%= markdown truncate(topic.body, length: 50, escape:false), links: false  %></p>
    <%= topic_info(topic) %>
  </div>
  <div class="small-2 columns text-center answer-count">
    <strong><%= topic.comments_count %></strong><br>评论
  </div>
</div>
