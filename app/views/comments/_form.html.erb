<div class="row small-collapse">
<div class="columns small-12">
<%= form_for form_params(@parent, @comment), data: {abide: ''} do |f| %>
	<%= render 'layouts/form_errors', object: @comment %>
	 <%= show_error_message('内容不能为空,请不要超过1千字！') %>
