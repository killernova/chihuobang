<div class="small-12 columns">
  <%= form_for @groupbuy, data: {abide: ''}  ,:html => {:multipart => true} do|f| %>
  <%= render 'layouts/form_errors', object: @groupbuy %>
  <div>
    <%= f.text_field :title, required: true,placeholder: "#{t(:groupbuy)} #{t(:title)}" %>
    <!--  <%#= show_error_message('团购名称，不能为空！') %> -->
  </div>
  <div>    
    <p><%=t(:please_choose_groupbuy_duration)%></p>
    <table class="table">
      <thead>
        <tr>         
          <th> <%#= f.label :start_time %>
            <%= f.text_field :start_time, required: true,:class=>"span2",:id=>"dpd2",placeholder: t(:start_time)%>
          </th>
          <th><%#= f.label :end_time %>
           <%= f.text_field :end_time, required: true,:class=>"span2",:id=>"dpd1",placeholder: t(:end_time)%>
         </th>
       </tr>
     </thead>
   </table>
 </div>
 <div>
  <%#= f.label :pic_url %>
  <div class="left"><%=t(:pic_url)%></div>
  <div class="left picture-upload"><%= file_field_tag :file%></div>
  <div class="clear"></div>
  <!-- <%#= show_error_message('请上传活动图片') %> -->
  <%#= f.text_field :pic_url, required: true%>
</div>
<div class='groupbuy-conditions'>
  <div class="price left">
    <!-- <%#= f.label :price %> -->
    <%= f.text_field :price,placeholder: t(:price) %>
  </div>
  <div class="goods-unit left">
    <%= f.text_field :goods_unit,placeholder: t(:goods_unit) %>
  </div>
  <!-- <div>
    <%#= f.label :goods_maximall %>
    <%#= f.text_field :goods_maximal,placeholder: t(:goods_maximal)%>
  </div> -->
  <div class="goods-minimal left">
    <!-- <%#= f.label :goods_minimal %> -->
    <%= f.text_field :goods_minimal,placeholder: t(:goods_minimal) %>
  </div>
  <div class="clear"></div>
</div>

<div class="row collapse goods-maximal">
  <div class="small-3 columns">
    <span class="postfix"><%= t(:inventory) %></span>
  </div>
  <div class="small-6 columns">
    <span class="postfix">
      <%= f.text_field :goods_maximal %>
    </span>
  </div>
  <div class="small-3 columns">
    <span class="postfix goods-unit-blank"></span>
  </div>
</div>

 <!--  <div>
    <%= f.text_field :name, required: true, placeholder: '姓名'%>
    <%= show_error_message('活动联系人')%>
  </div>
  <div>
    <%= f.text_field :mobile, required: true, placeholder: '手机'%>
    <%#= show_error_message('活动联系电话')%>
  </div> -->
  <div>
    <%#= f.label :body %>
    <%= f.text_area :body,placeholder: t(:body), rows: 5%>
    <!-- <%#= f.cktext_area :body, :class => 'someclass', :ckeditor => {:language => 'zh'} , required: true%> -->
    <!-- <%#= show_error_message('内容请不要超过1千字')%> -->
  </div>
  <div>
   <%= f.submit class:'tiny button radius right' %>
 </div>
 <% end %>
</div>
