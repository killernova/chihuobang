<% provide :title, t(:groupbuy) %>
<div class="row">
  <div class="large-12 columns">
    <div class="large-2 columns">
      <%= image_tag @groupbuy.pic_url, class: 'profile-image round' if @groupbuy %>
    </div>

    <div class="large-10 columns">
      <h2><%= @groupbuy.title %></h2>      
      <h3><%= "[No. #{@groupbuy.id.to_s.rjust(10,'0')}]" %></h3>      
    </div>
    <div>
      <table style="width:100%">
        <tr>
          <th><%=t(:start_time)%></th>
          <td><%= @groupbuy.start_time.strftime("%Y-%m-%d %H:%M") %></td>
        </tr>
        <tr>
          <th><%=t(:end_time)%></th>
          <td><%=@groupbuy.end_time.strftime("%Y-%m-%d %H:%M")%></td>
        </tr>
        <tr>
          <th><%=t(:goods_big_than)%></th>
          <td><%=@groupbuy.goods_minimal%><%=@groupbuy.goods_unit%></td>
        </tr>
        <tr>
          <th><%=t(:price)%></th>
          <td>￥<%=@groupbuy.price%>/<%=@groupbuy.goods_unit%></td>
        </tr>
        <tr>
          <td colspan='2'><%= @groupbuy.body.html_safe  %></td>
        </tr>
      </table>
      <!-- <p><%=@groupbuy.groupbuy_type%></p> -->
      <!-- <p><%=@groupbuy.limited_people%>人</p> -->
      <!-- <p><%=@groupbuy.goods_small_than%><%=@groupbuy.goods_unit%></p> -->
      <!-- <p>联系人：<%=@groupbuy.name%></p>
      <p>电话：<%=@groupbuy.mobile%></p><hr> -->
      <%= groupbuy_info(@groupbuy) %>
    </div>
    <div>
       <%= link_to t(:comment), new_groupbuy_comment_path(@groupbuy),
                              class:"tiny button radius" if signed_in? %>
       <%= link_to t(:new_participant), new_groupbuy_participant_path(@groupbuy),
                              class:"tiny button radius" if signed_in? %>
      

      <% if current_user == @groupbuy.user %>

        <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_groupbuy_path(@groupbuy), class:"tiny button radius" %>
        <%= link_to '<i class="fa fa-times"></i>'.html_safe, @groupbuy,method: :delete,
                  class:"tiny button alert radius",
                  data: {confirm: '?'} %>
      <% end %>
     </div>

     <div class="comments">
       <ul class="tabs" data-tab role="tablist">
        <li class="tab-title active"><a href="/groupbuys/<%= params[:id] %>/participants/new"><i class="fa fa-users"></i><%=t(:reservation)%> (<%=@groupbuy.participants_count%>)</a></li>
        <li class="tab-title"><a href="#comments"><i class="fa fa-comments"></i><%=t(:comments)%> (<%=@groupbuy.comments_count%>)</a></li>
      </ul>
      <div class="tabs-content panel">
        <div class="content active" id="participants">
          <%= render @participants %>
        </div>
        <div class="content" id="comments">
         <%= render @comments %>
       </div>
     </div>
   </div>


 </div>
</div>


