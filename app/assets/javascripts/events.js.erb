//--------------编辑图片---------------------//

$('.dz-image .trash').on('click', function(){
  var ids = [];
  var deleteIds = $('.delete-ids').val() + ',' + $(this).parent().attr('id');
  $('.delete-ids').val(deleteIds);

  var that = $(this);
  $(this).parent().remove();
  if($('.dz-image').length > 0) {
    $('.dz-image').each(function(){
      ids.push($(this).attr('id'));
    });
  }
  $('.pic-ids').val(ids.join(','));
});

